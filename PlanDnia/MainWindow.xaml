<Window x:Class="PlanDnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan Dnia"
        Height="500"
        Width="900"
        Background="#FFF9FAFB"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4C8BF5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2C6EE0"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="#E0E0E0"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Color="#22000000"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FFEAF2FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#DCE7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" Margin="10" Padding="10"
                Background="{StaticResource CardBackground}"
                CornerRadius="10"
                BorderBrush="{StaticResource LightGrayBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Tytuł:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" x:Name="TaskTitleTextBox" Margin="5" />

                <TextBlock Grid.Row="1" Text="Opis:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TaskDescriptionTextBox" Margin="5" TextWrapping="Wrap" Height="60"/>

                <TextBlock Grid.Row="2" Text="Data:" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="2" Grid.Column="1" x:Name="TaskDatePicker" Margin="5"/>

                <WrapPanel Grid.Row="3" Grid.ColumnSpan="2" Margin="0,10,0,0" HorizontalAlignment="Center">
                    <Button Content="Dodaj zadanie" Width="130" Click="AddTaskButton_Click"/>
                    <Button Content="Usuń zadanie" Width="130" Background="#FF777777" Click="DeleteTaskButton_Click"/>
                </WrapPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Column="1" Grid.RowSpan="2">
            <TextBlock Text="Do zrobienia" FontSize="18" FontWeight="Bold" Margin="10,5" Foreground="{StaticResource TextBrush}"/>
            <ListBox x:Name="TasksListBox" SelectionChanged="TasksListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" VerticalAlignment="Center" />
                            <Button Content="→" Width="30" Height="30" HorizontalAlignment="Right" 
                                    Click="MoveToCompletedButton_Click" Margin="5,0,0,0"/>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.RowSpan="2">
            <TextBlock Text="Zrobione" FontSize="18" FontWeight="Bold" Margin="10,5" Foreground="{StaticResource TextBrush}"/>
            <ListBox x:Name="CompletedTasksListBox" SelectionChanged="CompletedTasksListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Button Content="←" Width="30" Height="30" Margin="0,0,5,0"
                                    Click="MoveToPendingButton_Click"/>
                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold" VerticalAlignment="Center" />
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Margin="10">
            <TextBlock x:Name="TaskDetailsTextBlock" FontWeight="Bold" FontSize="14" Margin="0,10,0,5" />
            <TextBlock x:Name="TaskDescriptionTextBlock" TextWrapping="Wrap" Margin="0,5"/>
            <TextBlock x:Name="TaskDateTextBlock" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
