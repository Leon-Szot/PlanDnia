<Window x:Class="PlanDnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan Dnia" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.RowSpan="2">
            <!-- Nagłówek dla Do zrobienia -->
            <TextBlock Text="Do zrobienia:" FontSize="16" FontWeight="Bold" Margin="10, 10, 10, 5"/>

            <!-- Lista zadań do zrobienia -->
            <ListBox x:Name="TasksListBox" Margin="10, 0, 10, 0" 
            SelectionChanged="TasksListBox_SelectionChanged" BorderBrush="Transparent" BorderThickness="0" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0, 5">
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" VerticalAlignment="Center" />
                            <Button Content="→" Width="30" Height="30" HorizontalAlignment="Right" Margin="10, 0" 
                        Click="MoveToCompletedButton_Click" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.RowSpan="2">
            <!-- Nagłówek dla Zrobione -->
            <TextBlock Text="Zrobione:" FontSize="16" FontWeight="Bold" Margin="10, 10, 10, 5"/>

            <!-- Lista ukończonych zadań -->
            <ListBox x:Name="CompletedTasksListBox" Margin="10, 0, 10, 0" 
            SelectionChanged="CompletedTasksListBox_SelectionChanged" BorderBrush="Transparent" BorderThickness="0" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0, 5">
                            <Button Content="←" Width="30" Height="30" HorizontalAlignment="Right" Margin="10, 0" 
                            Click="MoveToPendingButton_Click" />
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" VerticalAlignment="Center" />
                            
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        

        <!-- Formularz do dodawania zadania -->
        <Grid Grid.Column="0" Grid.Row="0"  Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock>Tytuł: </TextBlock>
            <TextBox Grid.Column="1" x:Name="TaskTitleTextBox"/>
            <TextBlock Grid.Row="1">Opis:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="TaskDescriptionTextBox" TextWrapping="Wrap"/>
            <TextBlock Grid.Row="2">Data:</TextBlock>
            <DatePicker Grid.Row="2" Grid.Column="1" x:Name="TaskDatePicker"/>
            <WrapPanel Grid.Row="3" Grid.ColumnSpan="2">
                <Button Content="Add Task" Width="130" Margin="0, 5" Click="AddTaskButton_Click" HorizontalAlignment="Left" />
                <Button Content="Delete Task" Width="130" Margin="0, 5" Click="DeleteTaskButton_Click" HorizontalAlignment="Right"/>
            </WrapPanel>
        </Grid>


        <!-- Wyświetlanie szczegółów zadania -->
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Margin="10">
            <TextBlock x:Name="TaskDetailsTextBlock" FontWeight="Bold" FontSize="14" Margin="0, 10" />
            <TextBlock x:Name="TaskDescriptionTextBlock" TextWrapping="Wrap" Margin="0, 10" />
            <TextBlock x:Name="TaskDateTextBlock" Margin="0, 10" />
        </StackPanel>
    </Grid>
</Window>
