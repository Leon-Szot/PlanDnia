<Window x:Class="PlanDnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan Dnia" Height="350" Width="525">
    <Grid>
        <!-- ListBox do wyświetlania tytułów zadań -->
        <ListBox x:Name="TasksListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="200" 
                 SelectionChanged="TasksListBox_SelectionChanged" Margin="10,10,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Kontrolki do wyświetlania szczegółów wybranego zadania -->
        <TextBlock x:Name="TaskDetailsTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="320,10,10,0" FontWeight="Bold" />
        <TextBlock x:Name="TaskDescriptionTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="320,40,10,0"/>
        <TextBlock x:Name="TaskDateTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Margin="320,70,10,0"/>
        <CheckBox x:Name="TaskCompletedCheckBox" Content="Completed" HorizontalAlignment="Left" VerticalAlignment="Top" 
                  Margin="320,100,10,0"/>

        <!-- Form do dodawania zadania -->
        <TextBox x:Name="TaskTitleTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,220,0,0"/>
        <TextBox x:Name="TaskDescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,250,0,0"/>
        <DatePicker x:Name="TaskDatePicker" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,280,0,0"/>
        <Button Content="Add Task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,310,0,0" Click="AddTaskButton_Click" />

        <Button Content="Delete Task" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="220,310,0,0" Click="DeleteTaskButton_Click"/>
    </Grid>
</Window>
