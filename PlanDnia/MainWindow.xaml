<Window x:Class="PlanDnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Plan dnia" Height="450" Width="1016">
	<Grid HorizontalAlignment="Left" Width="879" Margin="112,10,0,0">
		<TextBlock FontSize="25" Text="Plan dnia" VerticalAlignment="Bottom" Margin="141,0,-122,376"/>

		<!-- Tytuł zadania -->
		<TextBox x:Name="TaskTitleTextBox" Width="300" Height="30" VerticalAlignment="Top" Margin="450,48,50,0" />

		<!-- Opis zadania -->
		<TextBox x:Name="TaskDescriptionTextBox" Width="300" Height="100" VerticalAlignment="Top" Margin="450,95,50,0" AcceptsReturn="True" />

		<!-- Data zadania -->
		<DatePicker x:Name="TaskDatePicker" Width="200" VerticalAlignment="Top" Margin="490,211,189,0" RenderTransformOrigin="0.962,0.585"/>

		<!-- Przycisk dodawania zadania -->
		<Button Content="Dodaj zadanie" Width="100" Height="40" VerticalAlignment="Top" Margin="450,240,250,0" Click="AddTaskButton_Click"/>

		<!-- Lista zadań -->
		<ListBox x:Name="TasksListBox" Width="300" Height="308" VerticalAlignment="Center" Margin="10,0,490,0"/>

		<!-- Przycisk usuwania zadania -->
		<Button Content="Usuń zadanie" Width="100" Height="40" VerticalAlignment="Top" Margin="650,240,50,0" Click="DeleteTaskButton_Click"/>
	</Grid>
</Window>
